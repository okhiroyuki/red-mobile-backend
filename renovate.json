{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":enablePreCommit",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    ":timezone(Asia/Tokyo)"
  ],
  "rangeStrategy": "pin",
  "major": {
    "automerge": false
  },
  "nodenv": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "automergeSchedule": ["before 2am"],
  "packageRules": [
    {
      "automerge": true,
      "matchManagers": ["pre-commit"]
    },
    {
      "automerge": true,
      "matchManagers": ["eslint", "eslint-config-standard"]
    },
    {
      "automarge": true,
      "matchManagers": ["grunt", "grunt-contrib-clean", "grunt-contrib-copy"]
    },
    {
      "automerge": false,
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "stabilityDays": 3,
      "prCreation": "not-pending"
    }
  ]
}
